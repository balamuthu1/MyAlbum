<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin_quarter"
    android:background="@drawable/transparent_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_margin_half">

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="0dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescription"
            android:text="Test sdfhsdfh h sdfh sfhs dfhsdf"
            android:textColor="@android:color/white"
            android:maxEms="10"
            android:lines="2"
            android:layout_marginLeft="@dimen/activity_margin_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgIcon"
            android:layout_toEndOf="@+id/imgIcon" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgRightArrow"
            android:src="@drawable/ic_right_arrow_black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_margin_quarter"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>